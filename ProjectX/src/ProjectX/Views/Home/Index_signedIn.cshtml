@{
    var random = new Random();
    var forumManager = new ForumManager();
    forumManager.Load();
}

@using Microsoft.AspNetCore.Identity
@using ProjectX.Data.Forum;
@inject UserManager<ApplicationUser> UserManager

<div style="width:100%;background-color:gray;">
    <!-- Featured ribbon -->
    <div class="container">
        <div class="row" style="text-align:left;background-color:gray;font-size:25px;font-weight:900;font-family:'Open Sans';">
            <div style="margin-top:25px;margin-left:25px;">Featured images of the month ★★★★★</div>
        </div>
        <div class="row" style="background-color:gray;">
            @for (int i = 0; i < 3; i++)
            {
                <div class="col-lg-4">
                    <div class="artwidget">
                        <div class="art">
                            @if (random.Next() % 2 == 0)
                            {
                            <div class="featured">
                                <img src="http://www.clipartkid.com/images/130/who-doesn-t-want-to-win-an-award-an-award-boldly-states-that-you-nMe7Z2-clipart.png" />
                                <div class="bubble">
                                    <div class="text">Featured on frontpage!</div>
                                </div>
                            </div>
                            }
                            <img src="https://s-media-cache-ak0.pinimg.com/736x/38/5d/f6/385df68d9ef66ac787f02ae5cdd8b73f.jpg" target="_blank">
                        </div>
                        <div class="bottombar">
                            <img src="http://f.cl.ly/items/0z1w0L092q070Q180K3p/36a9325cb67f11e18bb812313804a181_7.jpeg" target="_blank">
                            <div class="details">
                                <div class="line"></div>
                                <div class="line title" data-toggle="tooltip" data-placement="top">
                                    <a class="overflowtooltip" asp-action="Details" asp-controller="Users" asp-route-id="@(i + 1)" style="text-decoration:none;color:black;">
                                        Butterfly over the rainbow
                                    </a>
                                </div>
                                <div class="line artist"  data-toggle="tooltip" data-placement="bottom">
                                    <a class="overflowtooltip" asp-action="Details" asp-controller="Users" asp-route-id="@(i + 1)" style="text-decoration:none;color:black;">
                                        A kárhozottak királynője, a sárkányok anyja: Ms. Lófasz
                                    </a>
                                </div>
                                <div class="line"></div>
                            </div>
                            <div class="rating">
                                <a asp-action="Details" asp-controller="Users" asp-route-id="@(i + 1)" style="text-decoration:none;color:white;">
                                    <div class="ratingbox">
                                        <div class="counter">@(random.Next() % 1000)</div>
                                        <img src="http://icons.iconarchive.com/icons/paomedia/small-n-flat/1024/star-icon.png" target="_blank" />

                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- news feed -->
<div class="container body-content" style="padding-top:20px;">
    <div class="row">
        <div class="col-lg-12" style="font-size:33px;font-family:'Open Sans';text-align:left;margin:0">
            News
            <hr style="margin:0px;border-color:black;" />
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-lg-8 col-md-8">
            @for (int i = 0; i < 10; i++)
            {
                <div class="feedcomment">
                    <div class="topbar">
                        <div class="line"></div>
                        <div class="line artist">
                            <a class="overflowtooltip" asp-action="Details" asp-controller="Users" asp-route-id="@(i + 1)" style="text-decoration:none;color:black;" data-toggle="tooltip" data-placement="top">
                                lorantart
                            </a>
                        <div class="event">uploaded a new art!</div>                        
                        </div>
                        <div class="line"></div>
                    </div>
                    <div class="art">
                        <img src="https://s-media-cache-ak0.pinimg.com/736x/38/5d/f6/385df68d9ef66ac787f02ae5cdd8b73f.jpg" target="_blank">
                    </div>
                    <div class="bottombar">
                        <img id="profileimg" src="http://f.cl.ly/items/0z1w0L092q070Q180K3p/36a9325cb67f11e18bb812313804a181_7.jpeg" target="_blank">
                        <div class="details">
                            <div class="line"></div>
                            <div class="line title" data-toggle="tooltip" data-placement="top">
                                <a class="overflowtooltip" asp-action="Details" asp-controller="Users" asp-route-id="@(i + 1)" style="text-decoration:none;color:black;">
                                    Butterfly over the rainbow - avagy hogyan adjunk indokolatlanul hosszú címet egy képnek!
                                </a>
                            </div>
                            <div class="line artist" style="font-weight:500;" data-toggle="tooltip" data-placement="bottom">
                                <a class="overflowtooltip" asp-action="Details" asp-controller="Users" asp-route-id="@(i + 1)" style="text-decoration:none;color:black;">
                                    A kárhozottak királynője, a sárkányok anyja: Ms. Hosszúnevű Csicska Lófasz
                                </a>
                            </div>
                            <div class="line"></div>
                        </div>
                        <div class="rating">
                            <a asp-action="Details" asp-controller="Users" asp-route-id="@(i + 1)" style="text-decoration:none;color:white;">
                                <div class="ratingbox">
                                    <div class="counter">@(random.Next() % 1000)</div>
                                    <img src="http://icons.iconarchive.com/icons/paomedia/small-n-flat/1024/star-icon.png" target="_blank" />

                                </div>
                            </a>
                        </div>
                        <div class="rating">
                            <a asp-action="Details" asp-controller="Users" asp-route-id="@(i + 1)" style="text-decoration:none;color:white;">
                                <div class="ratingbox">
                                    <img src="http://icons.iconarchive.com/icons/paomedia/small-n-flat/1024/star-icon.png" target="_blank" />

                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="col-xs-12 col-lg-4 col-md-4">
            <!-- profile -->
            <div class="profilewidget">
                <img src="http://f.cl.ly/items/0z1w0L092q070Q180K3p/36a9325cb67f11e18bb812313804a181_7.jpeg" target="_blank">
                <div class="artist">
                    <div class="line"></div>
                    <div class="line name">
                        <a class="overflowtooltip" asp-action="Details" asp-controller="Users" asp-route-id="1" style="text-decoration:none;color:black;" data-toggle="tooltip" data-placement="bottom">
                            @UserManager.GetUserName(User)
                        </a>
                    </div>
                    <div class="line class">                                 
                            Design student
                    </div>
                    <div class="line levelbox">
                        <div class="levelbutton">
                            lvl 55
                        </div>
                    </div>
                    <div class="line"></div>
                </div>
                <div class="uploadbox">
                    <div class="uploadbutton">
                        Upload now!
                    </div>
                </div>
            </div>

            <!-- blog menu -->
            <div class="sidelist">
                <div class="topbar">
                    <div class="title">
                        BLOG
                    </div>
                </div>
                <!-- Scrollable class is handled by javascript, it isolates the scrolling field from the scrollable body -->
                <div class="list scrollable">
                    @for (int i = 0; i < 7; i++)
                    {
                    <div class="entry">
                        <img src="http://www.clipartbest.com/cliparts/Kcj/ddz/Kcjddz6cq.png" target="_blank">
                        <div class="content">
                            <div class="line"></div>
                            <div class="line lastuser"> Last reply: lorantart (2 hours ago) </div>
                            <div class="line topicname"> How to jerk it off in public </div>
                            <div class="line"></div>
                        </div>
                    </div>
                    }
                </div>
                <div class="bottombar">

                </div>
            </div>

            <!-- forum menu -->
            <div class="sidelist">
                <div class="topbar">
                    <div class="title">
                        FORUM
                    </div>
                </div>
                <!-- Scrollable class is handled by javascript, it isolates the scrolling field from the scrollable body -->
                <div class="list scrollable">
                    @foreach (var i in forumManager.GetTopFiveTopics(forumManager.GetForumByTitle("Digital Painting")))
                    {
                        var lastComment = forumManager.GetLastComment(i);
                        var elapsedTime = lastComment.CommentDate.Subtract(DateTime.Now);

                        <div class="entry">
                            <img src="http://www.clipartbest.com/cliparts/Kcj/ddz/Kcjddz6cq.png" target="_blank">
                            <div class="content">
                                <div class="line"></div>
                                <div class="line lastuser"> Last reply: @lastComment.User.UserName (@elapsedTime.Hours hours ago) </div>
                                <div class="line topicname"> @i.Title </div>
                                <div class="line"></div>
                            </div>
                        </div>
                    }
                </div>
                <div class="bottombar">

                </div>
            </div>

        </div>
    </div>
</div>